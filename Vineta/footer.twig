/* Footer Top Section */
.footer-top {
    padding: 60px 0;
    border-bottom: 1px solid var(--footer-border);
    background: linear-gradient(135deg, transparent, rgba(255, 255, 255, 0.02));
}

.footer-top-wrap {
    display: flex;
    gap: 40px;
    align-items: center;
}

/* Logo Section */
.footer-logo-section {
    text-align: center;
}

.footer-logo img {
    max-height: 60px;
    transition: transform 0.3s ease;
}

.logo-animated:hover img {
    transform: scale(1.1);
}

.footer-tagline {
    margin-top: 15px;
    color: var(--footer-text-secondary);
    font-size: 14px;
    line-height: 1.6;
}

/* Social Media Section */
.social-media-section {
    text-align: center;
}

.social-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 20px;
    color: var(--footer-text-primary);
}

.tf-social-icon {
    display: flex;
    gap: 15px;
    justify-content: center;
    list-style: none;
    margin: 0;
    padding: 0;
}

.social-item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: var(--footer-text-primary);
    text-decoration: none;
    transition: all 0.3s ease;
    overflow: hidden;
}

.social-item:hover {
    background: var(--footer-accent);
    color: #ffffff;
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
}

.social-item i {
    font-size: 20px;
    z-index: 2;
}

.social-ripple {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease;
}

.social-item:hover .social-ripple {
    width: 100%;
    height: 100%;
}

/* أستايل خاص لوسائل التواصل */
.social-facebook:hover {
    background: #1877f2 !important;
}

.social-instagram:hover {
    background: linear-gradient(45deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%) !important;
}

.social-twitter:hover {
    background: #000000 !important;
}

.social-snapchat:hover {
    background: #fffc00 !important;
    color: #000000 !important;
}

.social-tiktok:hover {
    background: #000000 !important;
}

.social-youtube:hover {
    background: #ff0000 !important;
}

.social-linkedin:hover {
    background: #0077b5 !important;
}

.social-whatsapp:hover {
    background: #25d366 !important;
}

.social-website:hover {
    background: var(--footer-accent) !important;
}

/* Newsletter Section */
.newsletter-section {
    text-align: center;
}

.newsletter-title {
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 10px;
    color: var(--footer-text-primary);
}

.newsletter-description {
    color: var(--footer-text-secondary);
    font-size: 14px;
    margin-bottom: 20px;
    line-height: 1.6;
}

.newsletter-form .form-group {
    position: relative;
    display: flex;
    max-width: 300px;
    margin: 0 auto;
}

.newsletter-form .form-control {
    flex: 1;
    padding: 12px 50px 12px 20px;
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 25px;
    background: rgba(255, 255, 255, 0.05);
    color: var(--footer-text-primary);
    font-size: 14px;
    transition: all 0.3s ease;
}

.newsletter-form .form-control:focus {
    outline: none;
    border-color: var(--footer-accent);
    background: rgba(255, 255, 255, 0.1);
}

.newsletter-form .form-control::placeholder {
    color: var(--footer-text-secondary);
}

.newsletter-form .btn-submit {
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    border: none;
    border-radius: 50%;
    background: var(--footer-accent);
    color: #ffffff;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
}

.newsletter-form .btn-submit:hover {
    background: var(--footer-accent);
    transform: translateY(-50%) scale(1.1);
}

/* Footer Main Content */
.footer-main {
    padding: 80px 0;
}

.footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 50px;
}

.footer-column {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.8s ease forwards;
}

.footer-column:nth-child(1) { animation-delay: 0.1s; }
.footer-column:nth-child(2) { animation-delay: 0.2s; }
.footer-column:nth-child(3) { animation-delay: 0.3s; }
.footer-column:nth-child(4) { animation-delay: 0.4s; }

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.footer-heading {
    position: relative;
    margin-bottom: 30px;
}

.footer-heading h3 {
    font-size: 20px;
    font-weight: 700;
    color: var(--footer-text-primary);
    margin: 0;
    position: relative;
    padding-bottom: 15px;
}

.footer-heading h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 50px;
    height: 3px;
    background: linear-gradient(90deg, var(--footer-accent), transparent);
    border-radius: 2px;
}

.section-icon {
    position: absolute;
     top: 6px;
    right: -27px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white-color);
}

/* Contact List */
.contact-list {
    list-style: none;
    margin: 0;
    padding: 0;
}

.contact-item {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
    padding: 15px;
    background: rgba(255, 255, 255, 0.03);
    border-radius: 10px;
    transition: all 0.3s ease;
    font-size:15px;
    font-weight:500
}

.contact-item:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateX(5px);
}

.contact-icon {
    width: 40px;
    height: 40px;
    background: var(--footer-accent);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    flex-shrink: 0;
}

.contact-info {
    flex: 1;
}

.contact-link {
    color: var(--footer-text-secondary);
    text-decoration: none;
    transition: color 0.3s ease;
}

.contact-link:hover {
    color: var(--footer-accent);
}

.contact-text {
    color: var(--footer-text-secondary);
    line-height: 1.6;
}

/* Footer Links */
.footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
}

.footer-links li {
    margin-bottom: 12px;
}

.footer-link {
    color: var(--footer-text-secondary);
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 0;
    position: relative;
    font-size:15px;
    font-weight:600
}

.footer-link::before {
    content: '';
    position: absolute;
    right: -15px;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 2px;
    background: var(--footer-accent);
    transition: width 0.3s ease;
}

.footer-link:hover {
    color: #67a156;
    padding-left: 15px;
}

.footer-link:hover::before {
    width: 10px;
}

/* Custom Content */
.custom-content {
    color: var(--footer-text-secondary);
    line-height: 1.8;
}

.custom-content h4 {
    color: var(--footer-text-primary);
    margin-bottom: 15px;
}

.custom-content p {
    margin-bottom: 15px;
}

.custom-content a {
    color: var(--footer-accent);
    text-decoration: none;
}

.custom-content a:hover {
    text-decoration: underline;
}

/* Footer Bottom */
.footer-bottom {
    padding: 20px 0;
    background: {% if settings.footer_bottom_bg_color %}{{ settings.footer_bottom_bg_color }}{% else %}#1a1a2e{% endif %};
    border-top: 1px solid {% if settings.footer_bottom_border_color %}{{ settings.footer_bottom_border_color }}{% else %}#2a2a3e{% endif %};
    margin-top: auto;
}

.footer-bottom-wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
    color: {% if settings.footer_bottom_text_color %}{{ settings.footer_bottom_text_color }}{% else %}#ffffff{% endif %};
}

.copyright-section {
    flex: 1;
}

.copyright-text {
    margin: 0;
    color: inherit;
    font-size: 14px;
    line-height: 1.5;
}

.copyright-text a {
    color: var(--footer-accent);
    text-decoration: none;
}

.copyright-text a:hover {
    text-decoration: underline;
}

.additional-copyright {
    margin: 5px 0 0 0;
    color: var(--footer-text-secondary);
    font-size: 12px;
    opacity: 0.8;
}

/* Apps & Payment Section */
.footer-bottom-right {
    display: flex;
    gap: 40px;
    align-items: center;
}

.mobile-apps {
    display: flex;
    gap: 15px;
}

.app-link {
    transition: transform 0.3s ease;
}

.app-link:hover {
    transform: translateY(-3px);
}

.payment-methods {
    display: flex;
    gap: 10px;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
}

.method-item {
    width: 50px;
    height: 35px;
    background: var(--footer-logistics-icons-bg);
    border-radius: 8px;
    padding: 5px;
    transition: all 0.3s ease;
}

.method-item:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
}

.method-item img {
    width: 100%;
    height: 100%;
    object-fit: contain;
}

/* Trust Badges */
.trust-badges {
    display: flex;
    gap: 15px;
    justify-content:center;
    align-items: center;
}

.trust-badge {
    transition: transform 0.3s ease;
}

.trust-badge:hover {
    transform: scale(1.1);
}

.trust-badge img {
    max-height: 40px;
    width: auto;
}

/* Back to Top Button */
.back-to-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 50px;
    height: 50px;
    background: var(--footer-accent);
    color: #ffffff;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    z-index: 1000;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
    opacity: 0;
    visibility: hidden;
    transform: translateY(20px);
}

/* أنماط زر العودة للأعلى */
.back-to-top.btn-default {
    border-radius: 8px;
}

.back-to-top.btn-rounded {
    border-radius: 50%;
}

.back-to-top.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.back-to-top:hover {
    background: var(--footer-accent);
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

/* Responsive Design */
@media (max-width: 1024px) {
    .footer-top-wrap {
        grid-template-columns: 1fr;
        gap: 30px;
        text-align: center;
    }
    
    .footer-grid {
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
    }
}

@media (max-width: 768px) {
    .footer-top {
        padding: 40px 0;
    }
    
    .footer-main {
        padding: 60px 0;
    }
    
    .footer-grid {
        grid-template-columns: 1fr;
        gap: 30px;
    }
    
    .footer-bottom-wrap {
        flex-direction: column;
        gap: 20px;
        text-align: center;
    }
    
    .footer-bottom-right {
        flex-direction: column;
        gap: 20px;
    }
    
    .tf-social-icon {
        gap: 10px;
    }
    
    .social-item {
        width: 45px;
        height: 45px;
    }
    
    .back-to-top {
        bottom: 20px;
        right: 20px;
        width: 45px;
        height: 45px;
    }
}

@media (max-width: 480px) {
    .footer-top {
        padding: 30px 0;
    }
    
    .footer-main {
        padding: 40px 0;
    }
    
    .footer-heading h3 {
        font-size: 18px;
    }
    
    .newsletter-form .form-control {
        font-size: 13px;
        padding: 10px 45px 10px 15px;
    }
    
    .newsletter-form .btn-submit {
        width: 35px;
        height: 35px;
    }
    
    .contact-item {
        padding: 12px;
    }
    
    .contact-icon {
        width: 35px;
        height: 35px;
    }
}

