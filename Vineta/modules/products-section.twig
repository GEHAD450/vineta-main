                prevArrow:'<span class="slick-prev hbtn1"><i class="'+arrowPrevClass+'"></i></span>',
                dots: false,
                rtl: !(window.appDirection === 'ltr'),
                responsive: [
                      {
                          breakpoint: 2100,
                          settings: {
                              slidesToShow: 4,
                              slidesToScroll: 2
                          }
                      },
                      {
                          breakpoint: 1500,
                          settings: {
                              centerPadding: '120px',
                              centerMode: true,
                              infinite:true,
                              slidesToShow: 4,
                              slidesToScroll: 1
                          }
                      },
                      {
                          breakpoint: 991,
                          settings: {
                              centerPadding: '40px',
                              centerMode: true,
                              infinite:true,
                              slidesToShow: 1,
                              slidesToScroll: 1
                          }
                      },
                      {
                          breakpoint: 480,
