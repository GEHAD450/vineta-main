        }, 100);
      });
    }

    // Mobile menu functionality
    const stickyMobileMenu = stickyHeader.querySelector('.vs-menu-toggle');
    if (stickyMobileMenu) {
      stickyMobileMenu.addEventListener('click', function() {
        if (typeof openSlidingMenu === 'function') {
          openSlidingMenu();
        }
      });
    }

    // Cart functionality
    const stickyCartBtn = stickyHeader.querySelector('.cart-toggle-btn');
    if (stickyCartBtn) {
