                        {% if settings.social_media_website or store.social_media.items.website %}
                        <li>
                            <a href="{% if settings.social_media_website %}{{ settings.social_media_website }}{% else %}{{ store.social_media.items.website }}{% endif %}" 
                               class="social-item social-website" target="_blank" data-tooltip="Website">
                                <i class="fas fa-globe"></i>
                                <span class="social-ripple"></span>
                            </a>
                        </li>
                        {% endif %}
                        
                        {% if settings.social_media_youtube %}
                        <li>
                            <a href="{{ settings.social_media_youtube }}" class="social-item social-youtube" target="_blank" data-tooltip="YouTube">
                                <i class="fab fa-youtube"></i>
                                <span class="social-ripple"></span>
                            </a>
                        </li>
                        {% endif %}
                        
                        {% if settings.social_media_linkedin %}
                        <li>
                            <a href="{{ settings.social_media_linkedin }}" class="social-item social-linkedin" target="_blank" data-tooltip="LinkedIn">
                                <i class="fab fa-linkedin-in"></i>
                                <span class="social-ripple"></span>
                            </a>
                        </li>
                        {% endif %}
                        
                        {% if settings.social_media_whatsapp %}
                        <li>
                            <a href="https://wa.me/{{ settings.social_media_whatsapp }}" class="social-item social-whatsapp" target="_blank" data-tooltip="WhatsApp">
                                <i class="fab fa-whatsapp"></i>
                                <span class="social-ripple"></span>
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div>
                {% endif %}
                
                <!-- Newsletter Signup -->
                {% if not settings.hide_newsletter %}
                <div class="newsletter-section">
                    {% if settings.newsletter_title %}
                    <h4 class="newsletter-title">{{ settings.newsletter_title }}</h4>
                    {% endif %}
                    
                    {% if settings.newsletter_description %}
                    <p class="newsletter-description">{{ settings.newsletter_description }}</p>
                    {% endif %}
                    
                    <form class="newsletter-form modern-form" method="POST">
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" 
                                   placeholder="{% if settings.newsletter_placeholder %}{{ settings.newsletter_placeholder }}{% else %}أدخل بريدك الإلكتروني{% endif %}" 
                                   required>
                            <button type="submit" class="btn-submit">
                                {% if settings.newsletter_button_text %}
                                    {{ settings.newsletter_button_text }}
                                {% else %}
                                    <i class="fas fa-paper-plane"></i>
                                {% endif %}
                            </button>
                        </div>
                    </form>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    {% endif %}
    
    <!-- Footer Main Content -->
    {% if not settings.hide_footer_main %}
    <div class="footer-main layout-grid">
        <div class="{% if settings.full_width %} container-fluid {% else %} container custom-container {% endif %}">
            <div class="footer-grid">
                
                <!-- Business Contact Section -->
                {% if not settings.business_location_hide %}
                <div class="footer-column contact-column">
                    <div class="footer-heading">
                        <h3>{% if settings.contact_section_title %}{{ settings.contact_section_title }}{% else %}تواصل معنا{% endif %}</h3>
                        {% if settings.contact_section_icon %}
                        <div class="section-icon">
                            <i class="{{ settings.contact_section_icon }}"></i>
                        </div>
                        {% endif %}
                    </div>
                    
                    <div class="footer-content">
                        {% if settings.contact_description %}
                        <p class="contact-description">{{ settings.contact_description }}</p>
                        {% endif %}
                        
                        <ul class="contact-list">
                            {% if settings.business_location_address or store.business_location.show_location %}
                            <li class="contact-item address-item">
                                <div class="contact-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="contact-info">
                                    {% if store.business_location.lat %}
                                        <a target="_blank" href="https://maps.google.com/?q={{ store.business_location.lat }},{{ store.business_location.lng }}" class="contact-link">
                                    {% endif %}
                                    <span class="contact-text">
                                        {% if settings.business_location_address %}
                                            {{ settings.business_location_address }}
                                        {% else %}
                                            {{ store.business_location.country.name }}, {{ store.business_location.city.name }}, {{ store.business_location.district }}, {{ store.business_location.street }}
                                        {% endif %}
                                    </span>
                                    {% if store.business_location.lat %}
                                        </a>
                                    {% endif %}
                                </div>
                            </li>
                            {% endif %}
                            
                            {% if settings.business_location_phone or store.social_media.items.phone %}
                            <li class="contact-item phone-item">
                                <div class="contact-icon">
                                    <i class="fas fa-phone"></i>
                                </div>
                                <div class="contact-info">
                                    <a href="tel:{% if settings.business_location_phone %}{{ settings.business_location_phone }}{% else %}{{ store.social_media.items.phone }}{% endif %}" class="contact-link">
                                        {% if settings.business_location_phone %}{{ settings.business_location_phone }}{% else %}{{ store.social_media.items.phone }}{% endif %}
                                    </a>
                                </div>
                            </li>
                            {% endif %}
                            
                            {% if settings.business_location_email %}
                            <li class="contact-item email-item">
                                <div class="contact-icon">
                                    <i class="fas fa-envelope"></i>
                                </div>
                                <div class="contact-info">
                                    <a href="mailto:{{ settings.business_location_email }}" class="contact-link">{{ settings.business_location_email }}</a>
                                </div>
                            </li>
                            {% endif %}
                            
                            {% if settings.business_hours %}
                            <li class="contact-item hours-item">
                                <div class="contact-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="contact-info">
                                    <span class="contact-text">{{ settings.business_hours }}</span>
                                </div>
                            </li>
                            {% endif %}
                        </ul>
                        
                    </div>
                </div>
                {% endif %}

