  }
</style>
{% endif %}
<script>

    document.addEventListener("DOMContentLoaded", function(){
        {% if settings.select_slider_or_horizontal == 'style1' or not settings.select_slider_or_horizontal %}
        var slidesToShowInWeb = {% if settings.columns|length == 1 %}1{% elseif settings.columns|length == 2 %}2{% elseif settings.columns|length == 3 %}3{% elseif settings.columns|length == 4 %}4 {% elseif settings.columns|length > 4 %} 4 {% endif %};
        var slidesToShowInWebWithAds = {% if settings.columns|length == 1 %}1{% elseif settings.columns|length == 2 %}2{% elseif settings.columns|length == 3 %}3 {% elseif settings.columns|length > 3 %} 3 {% endif %};

        $('section[section-id={{ sectionId }}] .miniSlider').slick({
          infinite: false,
          autoplay: true,
          slidesToShow: {% if settings.show_ads_section %} slidesToShowInWebWithAds {% else %} slidesToShowInWeb {% endif %},
          slidesToScroll: {% if settings.show_ads_section %} slidesToShowInWebWithAds {% else %} slidesToShowInWeb {% endif %},
          dots: false,
          rtl: !(window.appDirection === 'ltr'),
          arrows: false,
          responsive: [
            {% if settings.show_ads_section %}
            {
              breakpoint: 1500,
              settings: {
                slidesToShow: 2,
                slidesToScroll: 2
              }
            },
            {% else %}
            {
              breakpoint: 1500,
              settings: {
                slidesToShow: 3,
                slidesToScroll: 3
              }
            },
            {% endif %}
            {
              breakpoint: 991,
              settings: {
                slidesToShow: 2,
                slidesToScroll: 2
              }
            },
            {
                breakpoint: 767,
                settings: {
                    centerMode: true,
                    centerPadding: '80px',
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            },
            {
                breakpoint: 480,
                settings: {
                    centerMode: true,
                    centerPadding: '40px',
                    slidesToShow: 1,
                    slidesToScroll: 1
                }
            }
          ]
        });
        {% endif %}


        var prodsSlider = $('section[section-id={{ sectionId }}] .slider');
        if (prodsSlider.length) {
          prodsSlider.each(function () {
            $(this).slick({
              slidesToShow: 1,
              slidesToScroll: 1,
              infinite: false,
              autoplay: true,
              dots: false,
              rtl: !(window.appDirection === 'ltr'),
              arrows: false
            });
          });
        }

        $('section[section-id={{ sectionId }}] .slider,section[section-id={{ sectionId }}] .slider *').on('focus', function (e) {
          $('section[section-id={{ sectionId }}] .miniSlider').slick('slickSetOption', 'draggable', false, false);
          $('section[section-id={{ sectionId }}] .miniSlider').slick('slickSetOption', 'autoplay', false, false);
          $('section[section-id={{ sectionId }}] .miniSlider').slick('slickPause');
        });
        $('section[section-id={{ sectionId }}] .slider,section[section-id={{ sectionId }}] .slider *').on('blur', function (e) {
          $('section[section-id={{ sectionId }}] .miniSlider').slick('slickSetOption', 'draggable', true, true);
          $('section[section-id={{ sectionId }}] .miniSlider').slick('slickSetOption', 'autoplay', true, true);
          $('section[section-id={{ sectionId }}] .miniSlider').slick('slickPlay');
        });

        {% if settings.show_ads_section and settings.ad_section|length > 0 %}
            var arrowNextClass = (window.appDirection === 'ltr') ? 'fa fa-angle-right': 'fa fa-angle-left';
            var arrowPrevClass = (window.appDirection === 'ltr') ? 'fa fa-angle-left' : 'fa fa-angle-right';
            var prevArrowHTML = '<i class="' + arrowPrevClass + '"></i>';
            var nextArrowHTML = '<i class="' + arrowNextClass + '"></i>';

            let CateowlCarousel = $("section[section-id='{{ sectionId }}'] .promotional-banner.owl-carousel");
            if (CateowlCarousel.length) {
              CateowlCarousel.each(function () {
                let elm = $(this);
                elm.owlCarousel({
                  "loop": {% if (settings.adLoop) %}true{% else %}false{% endif %},
                  "animateOut": "fadeOut",
                  "animateIn": "fadeIn",
                  "autoplay": {% if (settings.adAutoplay) %}true{% else %}false{% endif %},
                  "autoplayTimeout": 7000,
                  "smartSpeed": 1000,
                  "nav": {% if (settings.adArrows) %}true{% else %}false{% endif %},
                  "navText": [prevArrowHTML,nextArrowHTML],
                  "dots": false,
                  "items": 1,
                  "rtl": (window.appDirection === "rtl") ? true : false
                });
                elm.find("button").each(function () {
                  $(this).attr("aria-label", "carousel button");
                });
              });
            }
        {% endif %}


    });
</script>
{% endif %}
