            <div class="footer-bottom-wrap">
                
                <!-- Copyright Section -->
                <div class="copyright-section">
                    {% if settings.copyright_text %}
                        <p class="copyright-text">{{ settings.copyright_text }}</p>
                    {% endif %}
                    
                    {% if settings.additional_copyright %}
                    <p class="additional-copyright">{{ settings.additional_copyright }}</p>
                    {% endif %}
                </div>
                
                <!-- Apps & Payment Section -->
                <div class="footer-bottom-right">
                    
                    <!-- Mobile Apps -->
                    {% if not settings.hide_mobile_apps and (store.apps.ios_app_id or store.apps.android_package_name or settings.global_settings_ios_id or settings.global_settings_android_id) %}
                    <div class="mobile-apps-section">
                        {% if settings.apps_section_title %}
                        <h4 class="apps-title">{{ settings.apps_section_title }}</h4>
                        {% endif %}
                        
                        <div class="mobile-apps">
                            {% if store.apps.ios_app_id or settings.global_settings_ios_id %}
