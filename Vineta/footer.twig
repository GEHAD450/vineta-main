{% if not settings.hide_footer %}
<footer section-id="{{ sectionId }}" id="footer" class="modern-footer" 
        style="{% if settings.footer_background_type == 'gradient' %}background: {{ settings.footer_gradient_start }} linear-gradient({{ settings.footer_gradient_direction }}deg, {{ settings.footer_gradient_start }}, {{ settings.footer_gradient_end }});{% elseif settings.footer_background_type == 'image' and settings.footer_bg_image %}background-image: url({{ settings.footer_bg_image }}); background-size: {{ settings.footer_bg_size }}; background-position: {{ settings.footer_bg_position }};{% else %}background-color: {{ settings.footer_bg_color }};{% endif %}">
    

    <!-- Animated Background Elements -->
    {% if settings.footer_animated_bg %}
    <div class="footer-bg-animation">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="floating-shape shape-4"></div>
    </div>
    {% endif %}

    <!-- Footer Top Section -->
    {% if not settings.hide_footer_top %}
    <div class="footer-top {% if settings.footer_top_style %}footer-top-{{ settings.footer_top_style }}{% endif %}">
        <div class="{% if settings.full_width %} container-fluid {% else %} container custom-container {% endif %}">
            <div class="footer-top-wrap">
                <!-- Logo Section -->
                {% if not settings.hide_footer_logo %}
                <div class="footer-logo-section">
                    <div class="footer-logo">
                        {% if settings.business_location_image %}
                            <a href="{{ store.url }}">
                                <img src="{{ settings.business_location_image }}" class="logo" alt="{{ store.name }}" loading="lazy">
                            </a>
                        {% else %}
                            <a href="{{ store.url }}">
                                <img src="{{ store.logo }}" class="logo" alt="{{ store.name }}" loading="lazy">
                            </a>
                        {% endif %}
                    </div>
                    
                    {% if settings.footer_tagline %}
                    <p class="footer-tagline">{{ settings.footer_tagline }}</p>
                    {% endif %}
                </div>
                {% endif %}
                
