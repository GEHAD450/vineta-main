{% if not settings.hide_all_section %}
<section section-id="{{ sectionId }}" data-lg-scroll-offset="130" data-md-scroll-offset="130" data-sm-scroll-offset="94" 

class="ParentMainSlider {% if settings.set_container %} sliderInBox pb-{% if settings.padding_bottom and settings.padding_bottom != 'default' %}{{ settings.padding_bottom }}{% else %}80{% endif %} pt-{% if settings.padding_top and settings.padding_top != 'default' %}{{ settings.padding_top }}{% else %}80{% endif %} {% endif %}">
  <div class="{% if settings.set_container %}container custom-container{% endif %}">
    <div class="vs-hero">
      <div class="vs-carousel hero-layout2" data-fade="true" data-dots="true">
            
        {% for index,slide in settings.slides %}

          <div class="slide-{{ index }} hero-main style3 flex-end background-image" style="{% if slide.content_center %} align-items: center; {% endif %}{% if slide.bg %}background-color:{{ slide.bg }};{% endif %} 
          {% if slide.image and slide.select_video_or_image == 'image' %}background-image: url({{ slide.image }});{% endif %}">

          {% if not slide.button and slide.link %}
          <a href="{{ slide.link }}"
          {% if slide.open_in_new_tab %}target="_blank"{% endif %}
          style="
          position: absolute;
          top: 0;
          left: 0;
          bottom: 0;
          right: 0;
          z-index: 1;
          display: block;
          width: 100%;
          height: 100%;
          ">
          </a>
          {% endif %}


            {% if slide.video and slide.select_video_or_image == 'video' %}
              <video class="video-player"
              style="
              position: absolute;
              top: 0;
              left: 0;
              bottom: 0;
              right: 0;
              max-height: unset;
              width: 100%;
              height: 100%;
                object-fit: cover;
              z-index: -1;"
              autoplay muted loop>
                <source src="{{ slide.video }}" type="video/mp4">
              </video>
            {% endif %}

            {% if slide.image_mobile and slide.select_video_or_image == 'image' %}
            <style>
              @media (max-width: 767px) {
                .slide-{{ index }} {
                  background-image: url({{ slide.image_mobile }})!important;
                }
              }
            </style>
            {% endif %}

              <div class="slide-item">
                {% if slide.overlay %}
                  <div class="overlay" style="background-color: {% if slide.overlay_color %} {{ slide.overlay_color }} {% else %} #fff {% endif %};opacity:{% if slide.overlay_opacity %} {{ slide.overlay_opacity }} {% else %} 0.5 {% endif %}"></div>
                {% endif %}
                <div class="container custom-container {% if not slide.content_center %}d-flex align-items-center  justify-content-between{% endif %}">
                    {% set has_content = slide.subtitle or slide.title or slide.button %}
                    {% if not slide.hide_content_if_empty or (slide.hide_content_if_empty and has_content) %}
                    <div class="hero-content {% if slide.content_center %}text-center{% endif %}{% if slide.content_bg_enable %} content-bg{% endif %}" 
                         style="{% if slide.content_bg_enable %}
                                  background-color: {% if slide.content_bg_color %}{{ slide.content_bg_color }}{% else %}rgba(255, 255, 255, {% if slide.content_bg_opacity %}{{ slide.content_bg_opacity }}{% else %}0.1{% endif %}){% endif %};
                                  padding: 40px;
                                  border-radius: 20px;
                                  backdrop-filter: blur(15px);
                                  border: 1px solid rgba(255, 255, 255, 0.1);
                                {% endif %}">
                      {% if slide.subtitle %}
                        <span class="hero-subtitle" style="{% if slide.subtitle_color %}color:{{ slide.subtitle_color }};{% endif %}{% if slide.content_center %}margin-left:auto;margin-right:auto{% endif %}">
                          <span class="text">
                          {{ slide.subtitle }}
                          </span>
                        </span>
                      {% endif %}
                      {% if slide.title %}
                        <h1 class="hero-title" style="{% if slide.title_color %}color:{{ slide.title_color }};{% endif %}{% if slide.content_center %}margin-left:auto;margin-right:auto;{% endif %}">
                          <span class="text">
                          {{ slide.title }}
                          </span>
                        </h1>
                      {% endif %}
                      {% if slide.button and slide.link %}
                        <div class="d-flex overflow-hidden">
                          <a 
                          {% if slide.content_center %}
                          style="margin-left:auto;margin-right:auto;
                            {% if slide.button_bg_color %}
                              background-color:{{ slide.button_bg_color }};
                            {% endif %}"
                          {% else %}
                            {% if slide.button_bg_color %}
                            style="background-color:{{ slide.button_bg_color }};"
                            {% endif %}
                          {% endif %} 
                          {% if slide.open_in_new_tab %}target="_blank"{% endif %}
                          href="{{ slide.link }}" class="vs-btn hbtn1">{{ slide.button }}</a>
                        </div>
                      {% endif %}
                    </div>
                    {% endif %}
                    {% if slide.slide_image %}
                      <div class="slide-image">
                        <img loading="lazy" src="{{ slide.slide_image }}" alt="{{ slide.title }}">
                      </div>
                    {% endif %}
                </div>
              </div>
            </div>
        {% endfor %}
    

      </div>
    </div>
  </div>

</section>

