{% if not settings.hide_all_section %}
<section section-id="{{ sectionId }}" data-lg-scroll-offset="130" data-md-scroll-offset="130" data-sm-scroll-offset="94" 
style="{% if settings.bg_color %}background-color:{{ settings.bg_color }};{% endif %} {% if settings.bg_img %}background-image:url({{ settings.bg_img }});background-size: cover; background-position: center; {% if settings.bg_attachment %} background-attachment: fixed;{% endif %}{% endif %}"
class="testimonials z-index-common overflow-hidden pb-{% if settings.padding_bottom and settings.padding_bottom != 'default' %}{{ settings.padding_bottom }}{% else %}80{% endif %} pt-{% if settings.padding_top and settings.padding_top != 'default' %}{{ settings.padding_top }}{% else %}80{% endif %}">
   
     
  {% if settings.overlay %}
    <div class="overlay" style="{% if settings.overlay_color %}background-color:{{ settings.overlay_color }};{% endif %} {% if settings.overlay_opacity %}opacity:{{ settings.overlay_opacity }};{% endif %}"></div>
  {% endif %}
      
    <div class="{% if settings.full_width %} container-fluid {% else %} container custom-container {% endif %}">

        {% if settings.sub_title or settings.section_title %}
        <div class="title-area {% if settings.title_center %}center{% endif %} pb-{% if settings.title_padding_bottom and settings.title_padding_bottom != 'default' %}{{ settings.title_padding_bottom }}{% else %}50{% endif %}">
          {% if settings.sub_title %}
            <h4 class="sub-title" style="{% if settings.sub_title_color %}color:{{ settings.sub_title_color }};{% endif %}">{{ settings.sub_title }}</h4>
          {% endif %}
          {% if settings.section_title %}
            <h2 class="section-title"  style="{% if settings.title_color %}color:{{ settings.title_color }};{% endif %}">
              {{ settings.section_title }}
            </h2>
          {% endif %}
        </div>
        {% endif %}
        <div class="testi-inner z-index-common">
          <div class="testi-carousel vs-carousel">
          {% if settings.select_slider_or_horizontal == 'style2' %}
          <div class="row">
          {% endif %}
            {% for testimonial in settings.testimonials %}    
                  <div class="testimonial-item
                              {% if settings.select_slider_or_horizontal == 'style2' %}
                                col-sm-6 col-xs-6 col-md-4
                                  {% if settings.columns == "2" %}
                                    col-lg-6
                                  {% elseif settings.columns == "3" %}
                                    col-lg-4
                                  {% elseif settings.columns == "4" %}
                                    col-lg-3
                                  {% else %}
                                    col-lg-3
                                  {% endif %}
                                {% endif %}">
                      <div class="Vineta-testimonial" style="{% if settings.card_bg_color %}background-color: {{ settings.card_bg_color }};{% endif %}">
                          {% if testimonial.review %}
                            <p class="desc" {% if settings.text_color %}style="color: {{ settings.text_color }};"{% endif %}>{{ testimonial.review }}</p>
                          {% endif %}
                          <div class="testimonial-info" {% if not testimonial.image_src %}style="text-align: center;"{% endif %}>
                              {% if testimonial.image_src %}
                                <div class="thumb">
                                  <img class="img" src="{{ testimonial.image_src }}" loading="lazy" alt="testi thumb">
                                </div>
                              {% endif %}
                              <div class="intro">
                                  {% if testimonial.name %}
                                    <h3 class="name" {% if settings.text_color %}style="color: {{ settings.text_color }};"{% endif %}>{{ testimonial.name }}</h3>
                                  {% endif %}
                                  {% if testimonial.show_stars %}
                                    <div class="stars">
                                      <i class="fa fa-star"></i>
                                      <i class="fa fa-star"></i>
                                      <i class="fa fa-star"></i>
                                      <i class="fa fa-star"></i>
                                      <i class="fa fa-star"></i>
                                    </div>
                                  {% endif %}
                              </div>
                          </div>
                      </div>
                  </div>
            {% endfor %}
            {% if settings.select_slider_or_horizontal == 'style2' %}
            </div>
            {% endif %}
          </div>
        </div>
    </div>
</section>

{% if settings.select_slider_or_horizontal == 'style1' or not settings.select_slider_or_horizontal %}
<script>
  document.addEventListener("DOMContentLoaded", function(){

    var arrowNextClass = (window.appDirection === 'ltr') ? 'fa fa-angle-right': 'fa fa-angle-left';
    var arrowPrevClass = (window.appDirection === 'ltr') ? 'fa fa-angle-left' : 'fa fa-angle-right';

    $('section[section-id={{ sectionId }}] .testi-carousel.vs-carousel').slick({
        dots: {% if settings.dots %}true{% else %}false{% endif %},
        arrows: {% if settings.arrows %}true{% else %}false{% endif %},
        autoplay: {% if settings.autoplay %}true{% else %}false{% endif %},
        infinite: {% if settings.loop %}true{% else %}false{% endif %},
        rtl: window.appDirection === 'rtl',
        nextArrow:'<span class="slick-next hbtn1"><i class="'+arrowNextClass+'"></i></span>',
        prevArrow:'<span class="slick-prev hbtn1"><i class="'+arrowPrevClass+'"></i></span>',
        slidesToShow: {% if settings.items_web %}{{ settings.items_web }}{% else %}3{% endif %},
        slidesToScroll: {% if settings.items_web %}{{ settings.items_web }}{% else %}3{% endif %},
              responsive: [
                  {
                      breakpoint: 992,
                      settings: {
                          slidesToShow: 3,
                          slidesToScroll: 3
                      }
                  },
                  {
                      breakpoint: 767,
                      settings: {
                          centerMode: true,
                          centerPadding: '80px',
                          slidesToShow: 1,
                          slidesToScroll: 1
                      }
                  },
                  {
                      breakpoint: 480,
                      settings: {
                          centerMode: true,
                          centerPadding: '40px',
                          slidesToShow: 1,
                          slidesToScroll: 1
                      }
                  }
              ]

      });

  });
</script>
{% endif %}
