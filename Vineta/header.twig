  // Sticky Header and Transparent Header Functionality
  const stickyHeader = document.getElementById('sticky-header');
  const originalHeader = document.getElementById('header');
  const topbar = document.querySelector('.tf-topbar');
  let headerHeight = 0;
  let topbarHeight = 0;

  function calculateHeights() {
    if (originalHeader) {
      headerHeight = originalHeader.offsetHeight;
    }
    if (topbar) {
      topbarHeight = topbar.offsetHeight;
    }
  }

  function handleHeaderScroll() {
    const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
    
    // Handle transparent header effect
    if (scrollTop > topbarHeight + 20) {
      if (originalHeader) {
        originalHeader.classList.add('is-scrolled', 'header-scrolled');
        originalHeader.style.position = 'fixed';
        originalHeader.style.top = '0';
        originalHeader.style.backgroundColor = '#fff';
        originalHeader.style.boxShadow = '0 2px 20px rgba(0, 0, 0, 0.08)';
      }
    } else {
      if (originalHeader) {
        originalHeader.classList.remove('is-scrolled', 'header-scrolled');
        originalHeader.style.position = 'relative';
        originalHeader.style.backgroundColor = 'transparent';
        originalHeader.style.boxShadow = 'none';
      }
    }
    
    // Handle sticky header
    if (scrollTop > headerHeight + topbarHeight + 50) {
      if (stickyHeader) {
        stickyHeader.classList.add('sticky-active');
      }
    } else {
      if (stickyHeader) {
        stickyHeader.classList.remove('sticky-active');
      }
    }
  }

  // Initialize sticky header functions
  function initStickyHeaderFunctions() {
    if (!stickyHeader) return;
    
