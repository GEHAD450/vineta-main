<header section-id="{{ sectionId }}" data-lg-scroll-offset="130" data-md-scroll-offset="130" data-sm-scroll-offset="94" >
    <style>
      .storeMsg .availability-bar {
        padding: 10px 0;
        background: #fcf1d6;
      }
    </style>

<!-- Top Bar -->
{% if settings.announcement_bar_display %}
<div class="tf-topbar" style="background:{% if settings.announcement_bar_background_color %}{{ settings.announcement_bar_background_color }} {% else %} var(--primary-color) {% endif %}">
    {% if not settings.announcement_bar_hide_close %}<i class="fa fa-close closeBar"></i> {% endif %}
    <div class="{% if settings.full_width %} container-fluid {% else %} container custom-container {% endif %}">
        <div class="topbar-wraper d-flex justify-content-between align-items-center">
            <!-- Social Media Icons (Left) -->
            {% if settings.announcement_bar_social_display %}
            <div class="topbar-social-wrapper d-none d-xl-flex">
                <ul class="tf-social-icon d-flex align-items-center">
                    {% if settings.announcement_bar_social_facebook %}
                    <li><a href="{{ settings.announcement_bar_social_facebook }}" class="social-item social-facebook" target="_blank" title="Facebook"><i class="fa fa-facebook"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_instagram %}
                    <li><a href="{{ settings.announcement_bar_social_instagram }}" class="social-item social-instagram" target="_blank" title="Instagram"><i class="fa fa-instagram"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_twitter %}
                    <li><a href="{{ settings.announcement_bar_social_twitter }}" class="social-item social-twitter" target="_blank" title="Twitter"><i class="fa fa-twitter"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_snapchat %}
                    <li><a href="{{ settings.announcement_bar_social_snapchat }}" class="social-item social-snapchat" target="_blank" title="Snapchat"><i class="fa fa-snapchat"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_youtube %}
                    <li><a href="{{ settings.announcement_bar_social_youtube }}" class="social-item social-youtube" target="_blank" title="YouTube"><i class="fa fa-youtube"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_linkedin %}
                    <li><a href="{{ settings.announcement_bar_social_linkedin }}" class="social-item social-linkedin" target="_blank" title="LinkedIn"><i class="fa fa-linkedin"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_tiktok %}
                    <li><a href="{{ settings.announcement_bar_social_tiktok }}" class="social-item social-tiktok" target="_blank" title="TikTok"><i class="fa fa-tiktok"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_whatsapp %}
                    <li><a href="{{ settings.announcement_bar_social_whatsapp }}" class="social-item social-whatsapp" target="_blank" title="WhatsApp"><i class="fa fa-whatsapp"></i></a></li>
                    {% endif %}
                    {% if settings.announcement_bar_social_telegram %}
                    <li><a href="{{ settings.announcement_bar_social_telegram }}" class="social-item social-telegram" target="_blank" title="Telegram"><i class="fa fa-telegram"></i></a></li>
                    {% endif %}
                </ul>
            </div>
            {% endif %}
            
            <!-- Center Content -->
            <div class="flex-grow-1 d-flex justify-content-center align-items-center">
                {% if settings.announcement_bar_animation_type == 'marquee' %}
                <!-- Marquee Animation -->
                <div class="marquee-wrapper" style="overflow: hidden; white-space: nowrap; width: 100%; max-width: 600px;">
                    <div class="marquee-content" style="animation: marqueeScroll {% if settings.announcement_bar_bar_speed %}{{ settings.announcement_bar_bar_speed / 1000 }}{% else %}20{% endif %}s linear infinite;">
                        {% for key, item in settings.announcement_bar_news %}
                            <span style="margin-right: 80px; display: inline-block;">
                                <a {% if item.link %} href="{{ item.link }}"{% endif %} style="text-decoration: none; color: {% if settings.announcement_bar_text_color %}{{ settings.announcement_bar_text_color }}{% else %}#fff{% endif %}; font-size: 14px; font-weight: 500;">
                                    {{ item.text }}
                                </a>
                            </span>
                        {% endfor %}
                    </div>
                </div>
                {% else %}
                <!-- Carousel Animation -->
                <div class="announcement-carousel" style="max-width: 600px; width: 100%;">
                    <div id="announcementOwl" class="owl-carousel owl-theme">
                        {% for key, item in settings.announcement_bar_news %}
                        <div class="item text-center">
                            <a {% if item.link %} href="{{ item.link }}"{% endif %} style="text-decoration: none; color: {% if settings.announcement_bar_text_color %}{{ settings.announcement_bar_text_color }}{% else %}#fff{% endif %}; font-size: 14px; font-weight: 500;">
                                {{ item.text }}
                            </a>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
            
            <!-- Navigation Arrows (Right) -->
            {% if settings.announcement_bar_animation_type != 'marquee' %}
            <div class="topbar-nav-container d-none d-md-flex">
                <!-- Owl Carousel navigation will be moved here -->
            </div>
            {% endif %}
        </div>
    </div>
</div>
