{% if not settings.hide_all_section %}
<section section-id="{{ sectionId }}" data-version="2.7.0" data-last-updated="2025-10-02 09:29:27" data-cache-buster="20251002092927"
     data-lg-scroll-offset="130"
     data-md-scroll-offset="130"
     data-sm-scroll-offset="94"
        style="{% if settings.bg_color %}background-color:{{ settings.bg_color }};{% endif %} {% if settings.bg_img %}background-image:url({{ settings.bg_img }});background-size: cover; background-position: center; {% if settings.bg_attachment %} background-attachment: fixed;{% endif %}{% endif %}"
     class="home-products-section {% if settings.display_mode == 'grid' %}grid-mode{% else %}slider-mode{% endif %} pb-{% if settings.padding_bottom and settings.padding_bottom != 'default' %}{{ settings.padding_bottom }}{% else %}80{% endif %} pt-{% if settings.padding_top and settings.padding_top != 'default' %}{{ settings.padding_top }}{% else %}80{% endif %}">
    
    {% if settings.overlay %}
      <div class="overlay" style="{% if settings.overlay_color %}background-color:{{ settings.overlay_color }};{% endif %} {% if settings.overlay_opacity %}opacity:{{ settings.overlay_opacity }};{% endif %}"></div>
    {% endif %}
    
    <div class="{% if settings.full_width %} container-fluid {% else %} container custom-container {% endif %}">
        {% if settings.sub_title or settings.section_title %}
        <div class="title-area {% if settings.title_center %}center{% endif %} pb-{% if settings.title_padding_bottom and settings.title_padding_bottom != 'default' %}{{ settings.title_padding_bottom }}{% else %}50{% endif %}">
          {% if settings.sub_title %}
            <h4 class="sub-title" style="{% if settings.sub_title_color %}color:{{ settings.sub_title_color }};{% endif %}">{{ settings.sub_title }}</h4>
          {% endif %}
          {% if settings.section_title %}
            <h2 class="section-title"  style="{% if settings.title_color %}color:{{ settings.title_color }};{% endif %}">
              {{ settings.section_title }}
            </h2>
          {% endif %}
        </div>
        {% endif %}


      <div class="d-flex flex-column">

          <div class="products-slider-wrapper" style="position: relative">
                  <div class="products-slider row s-slider" {% if settings.display_mode == 'slider' %}id="products-slider-{{ sectionId }}"{% endif %}>
                    {% if settings.items_count or settings.items_count == 'default' %}
                      {% if settings.items_count == 'default' %}
                        {% set items_count = 8 %}
                      {% else %}
                        {% set items_count = settings.items_count %}
                      {% endif %}
                      
                      {% for key, product in settings.products.products|slice(0, items_count) %}
                          {% if settings.hide_out_of_stock %}
                            {% if product.is_infinite == true or product.quantity > 0 %}
                              <div class="prod-col">
                                  {% include 'product-card.twig' with {'product' : product, 'index': key,
                                  'parentId':sectionId,"hide_rate":settings.hide_rate,
                                  'show_payments': settings.show_payments,
                                  "show_count": settings.show_count,
                                  "card_list_border":settings.card_list_border,"hide_description":settings.hide_description } %}
                              </div>
                            {% endif %}
                          {% else %}
                            <div class="prod-col">
                                {% include 'product-card.twig' with {'product' : product, 'index': key,
                                'parentId':sectionId,"hide_rate":settings.hide_rate,
                                "show_count": settings.show_count,
                                'show_payments': settings.show_payments,
                                "card_list_border":settings.card_list_border,"hide_description":settings.hide_description } %}
                            </div>
                          {% endif %}
                      {% endfor %}
                      {% else %}
                        {% for key, product in settings.products.products %}
                          {% if settings.hide_out_of_stock %}
                              {% if product.is_infinite == true or product.quantity > 0 %}
                                <div class="prod-col">
                                  {% include 'product-card.twig' with {'product' : product, 'index': key,'parentId':sectionId,
                                  "hide_rate":settings.hide_rate,
                                  "show_count": settings.show_count,"card_list_border":settings.card_list_border,
                                  'show_payments': settings.show_payments,
                                  "hide_description":settings.hide_description } %}
                                </div>
                              {% endif %}

                            {% else %}
                              <div class="prod-col">
                                {% include 'product-card.twig' with {'product' : product, 'index': key,'parentId':sectionId,
                                "hide_rate":settings.hide_rate,
                                "show_count": settings.show_count,"card_list_border":settings.card_list_border,
                                'show_payments': settings.show_payments,
                                "hide_description":settings.hide_description } %}
                              </div>
                            {% endif %}
                        {% endfor %}
                      {% endif %}
                  </div>
          </div>

      </div>

    </div>

    {% if settings.more_link and settings.more_text %}
        <center>
            <a href="{{ settings.more_link }}" class="all-products hbtn1" {% if settings.open_new_tab %}target="_blank"{% endif %} {% if settings.product_main_color %} style="background-color:{{ settings.product_main_color }};color:#fff" {% endif %}>{{ settings.more_text }}</a>
        </center>
    {% endif %}

</section>
 
{% if settings.product_main_color %}
    <style>
        section[section-id="{{ sectionId }}"] .product-item .mask .add-to-wishlist a.fa-heart-o.filled {
            background-color: {{ settings.product_main_color }};
            border-color: {{ settings.product_main_color }};
            color:#fff;
        }
        section[section-id="{{ sectionId }}"] .product-item .mask .labels .product-discount,
        section[section-id="{{ sectionId }}"] .product-item .offer-counter li,
        section[section-id="{{ sectionId }}"] .product-item .options small {
            background-color: {{ settings.product_main_color }};
            color:#fff;
        }

        section[section-id="{{ sectionId }}"] .product-item .content .title:hover a{
            color: {{ settings.product_main_color }};
        }

        section[section-id="{{ sectionId }}"] .product-item:hover {
            border-color: {{ settings.product_main_color }};
        }

        section[section-id="{{ sectionId }}"] .product-item .mask .add-to-wishlist a.fa-heart-o:not(.filled):hover:before {
            color: {{ settings.product_main_color }};
        }
        
        section[section-id="{{ sectionId }}"] .price .salePrice {
            color: {{ settings.product_main_color }};
        }

        section[section-id="{{ sectionId }}"] .product-item .content .btns .addCart:not(.disabled) a span,
        section[section-id="{{ sectionId }}"] .product-item .content .btns .addCart:not(.disabled) a {
            color:#fff!important;
            background-color:{{ settings.product_main_color }}!important
        }

        section[section-id="{{ sectionId }}"] .product-card-rating .fa-star {
          color:{{ settings.product_main_color }}
        }

        
    </style>
{% endif %}


