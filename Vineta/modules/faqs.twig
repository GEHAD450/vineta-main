{% if not settings.hide_all_section %}
<section section-id="{{ sectionId }}"
         data-lg-scroll-offset="130"
         data-md-scroll-offset="130"
         style="{% if settings.bg_color %}background-color:{{ settings.bg_color }};{% endif %} {% if settings.bg_img %}background-image:url({{ settings.bg_img }});background-size: cover; background-position: center; {% if settings.bg_attachment %} background-attachment: fixed;{% endif %}{% endif %}"
         data-sm-scroll-offset="94" class="faqs-section pb-{% if settings.padding_bottom and settings.padding_bottom != 'default' %}{{ settings.padding_bottom }}{% else %}80{% endif %} pt-{% if settings.padding_top and settings.padding_top != 'default' %}{{ settings.padding_top }}{% else %}80{% endif %}">
  
    {% if settings.overlay %}
    <div class="overlay" style="{% if settings.overlay_color %}background-color:{{ settings.overlay_color }};{% endif %} {% if settings.overlay_opacity %}opacity:{{ settings.overlay_opacity }};{% endif %}"></div>
  {% endif %}
  
  <div class="{% if settings.full_width == false %} container custom-container {% else %} container-fluid {% endif %}">

    {% if settings.sub_title or settings.section_title %}
    <div class="title-area {% if settings.title_center %}center{% endif %} pb-{% if settings.title_padding_bottom and settings.title_padding_bottom != 'default' %}{{ settings.title_padding_bottom }}{% else %}50{% endif %}">
      {% if settings.sub_title %}
        <h4 class="sub-title" style="{% if settings.sub_title_color %}color:{{ settings.sub_title_color }};{% endif %}">{{ settings.sub_title }}</h4>
      {% endif %}
      {% if settings.section_title %}
        <h2 class="section-title"  style="{% if settings.title_color %}color:{{ settings.title_color }};{% endif %}">
          {{ settings.section_title }}
        </h2>
      {% endif %}
    </div>
    {% endif %}
    <div class="row">
    {% for faq in settings.faqs %}
      <div class="col-sm-12 col-md-6
                {% if settings.columns == "2" or not settings.columns %}
                  col-lg-6
                {% elseif settings.columns == "3" %}
                  col-lg-4
                {% endif %}">
          <div class="accordion">
            <div class="accordion-title" data-color="{% if settings.item_color %}{{ settings.item_color }}{% else %}#000{% endif %}" style="{% if settings.bg_title_color %}background-color:{{ settings.bg_title_color }};{% endif %} {% if settings.item_color %}color:{{ settings.item_color }};{% endif %}">
            <h3>{{ faq.question }}</h3>
          </div>
          <div class="accordion-body" style="{% if settings.bg_title_color %}background-color:{{ settings.bg_title_color }};{% endif %} {% if settings.item_color %}color:{{ settings.item_color }};{% endif %}">
          <p>{{ faq.answer }}</p>
          </div>
        </div>
      </div>
    {% endfor %}
    </div>


  </div>

</section>


<script>

    document.addEventListener("DOMContentLoaded", function(){
      
      $("section[section-id='{{ sectionId }}'] .accordion .accordion-title").click(function () {
        $(this).next().slideToggle(500);
        $("section[section-id='{{ sectionId }}'] .accordion .accordion-body").not($(this).next()).slideUp(500);
        $("section[section-id='{{ sectionId }}'] .accordion").not($(this).parent()).removeClass("active");  
        $(this).parent().toggleClass("active")
      });
    });
</script>
{% endif %}

