{% if not settings.hide_all_section %}
<div section-id="{{ sectionId }}" data-lg-scroll-offset="130" data-md-scroll-offset="130" data-sm-scroll-offset="94" 
class="xc-ads-one pb-{% if settings.padding_bottom and settings.padding_bottom != 'default' %}{{ settings.padding_bottom }}{% else %}0{% endif %} pt-{% if settings.padding_top and settings.padding_top != 'default' %}{{ settings.padding_top }}{% else %}0{% endif %}">
    <!-- ads start -->
    <div class="container custom-container">
        <div class="row">
            {% for adItem in settings.ads %}
                <div class="{% if loop.index == 1 and loop.last %}col-12{% else %}col-lg-6 col-md-6 col-sm-12{% endif %}">
                    {% if adItem.image %}
                    <div class="banner-shop style-abs hover-img radius-20 overflow-hidden position-relative">
                        <div class="image img-style">
                            <img src="{{ adItem.image }}" loading="{% if loop.first %}eager{% else %}lazy{% endif %}" alt="{{ adItem.alt_text ? adItem.alt_text : 'إعلان' }}" class="w-100 h-100 object-fit-cover">
                        </div>
                        
                        <!-- محتوى الإعلان -->
                        <div class="content position-absolute top-50 start-50 translate-middle text-center w-100 px-4">
                            <div class="box-content">
                                {% if adItem.subtitle %}
                                <p class="subtitle  ">{{ adItem.subtitle }}</p>
                                {% endif %}
                                
                                {% if adItem.title %}
                                <h3 class="title fw-bold mb-3 display-6">{{ adItem.title }}</h3>
                                {% endif %}
                                
                                {% if adItem.button_text and adItem.image_link %}
                                <div class="box-btn">
                                    <a href="{{ adItem.image_link }}" 
                                       class="tf-btn animate-btn btn-green-2 btn-space1 text-decoration-none" 
                                       {% if adItem.open_in_new_tab %}target="_blank"{% endif %}>
                                        {{ adItem.button_text }}
                                        <i class="fa fa-arrow-left ms-2"></i>
                                    </a>
                                </div>
                                {% endif %}
                            </div>
                        </div>
                        
                        <!-- طبقة overlay متدرجة -->
                        {% if settings.overlay_enable %}
                        <div class="ad-overlay position-absolute top-0 start-0 w-100 h-100"></div>
                        {% endif %}
                    </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    <!-- ads end -->
</div>
{% endif %}

<style>
/* CSS Variables للإعدادات - تُستخدم في home-page.rtl.css */
:root {
    --ad-text-color: {{ settings.ad_image_text_color ? settings.ad_image_text_color : '#ffffff' }};
    --ad-subtitle-color: {{ settings.ad_image_subtitle_color ? settings.ad_image_subtitle_color : '#ffffff' }};
    --ad-button-bg: {{ settings.ad_image_button_bg_color ? settings.ad_image_button_bg_color : '#28a745' }};
    --ad-button-hover: {{ settings.ad_image_button_hover_color ? settings.ad_image_button_hover_color : '#20c997' }};
    --ad-button-text: {{ settings.ad_image_button_text_color ? settings.ad_image_button_text_color : '#ffffff' }};
    --ad-overlay-color: {{ settings.ad_image_overlay_color ? settings.ad_image_overlay_color : '#000000' }};
    --ad-overlay-opacity: {{ settings.ad_image_overlay_opacity ? settings.ad_image_overlay_opacity : 50 }};
    --ad-border-radius: {{ settings.ad_image_border_radius ? settings.ad_image_border_radius : 20 }}px;
}
</style>

<!-- الاستايلات الأساسية موجودة في home-page.rtl.css -->

{% if settings.hover_effects %}
<style>
/* تفعيل تأثيرات التمرير */
.banner-shop:hover .img-style img {
    transform: scale(1.06) !important;
}
.tf-btn:hover {
    background: linear-gradient(135deg, var(--ad-button-hover) 0%, var(--ad-button-bg) 100%) !important;
    transform: translateY(-2px) !important;
    color: var(--ad-button-text) !important;
}
.banner-shop:hover::before {
    opacity: 1 !important;
}
</style>
{% else %}
<style>
/* إلغاء تأثيرات التمرير */
.banner-shop:hover .img-style img {
    transform: none !important;
}
.tf-btn:hover {
    background: var(--ad-button-bg) !important;
    transform: none !important;
    color: var(--ad-button-text) !important;
}
.banner-shop:hover::before {
    opacity: 0 !important;
}
</style>
{% endif %}


