          {% if settings.count_per_col == "2" %}
            col-lg-6
          {% elseif settings.count_per_col == "3" %}
            col-lg-4
          {% elseif settings.count_per_col == "4" %}
            col-lg-3
          {% else %}
            {% if settings.select_slider_or_horizontal == 'style2' and settings.show_ads_section %}
              col-lg-4
            {% else %}
              col-lg-3
            {% endif %}
          {% endif %}
        {% endif %}
        
        ">

            <div class="list" data-color="{% if column.main_color %}{{ column.main_color }}{% else %}var(--primary-color){% endif %}">
              {% if column.title or (column.view_all_url and column.view_all_text) %}
                {% if column.view_all_url and not column.view_all_text %}
                <a href="{{ column.view_all_url }}">
                {% endif %}
                  <div class="section__title-wrap section__title-wrap--single" data-color="{% if column.main_color %}{{ column.main_color }}{% else %}var(--primary-color){% endif %}">
                    <h2 class="section__title section__title--small" 
                    {% if not column.view_all_url or not column.view_all_text %} style="width:100%;"{% endif %}
                    data-color="{% if column.main_color %}{{ column.main_color }}{% else %}var(--primary-color){% endif %}">{{ column.title }}</h2>
                    {% if column.view_all_url and column.view_all_text %}
                    <div class="section__nav-wrap">
                      <a href="{{ column.view_all_url }}" class="section__view hbtn1" {% if column.new_tab %}target="_blank"{% endif %} style="{% if column.main_color %}background-color:{{ column.main_color }};{% endif %}">{{ column.view_all_text }}</a>
                    </div>
                    {% endif %}
                  </div>
              {% if column.view_all_url and not column.view_all_text %}
              </a>
              {% endif %}
              {% endif %}
              <div class="slider">
                {% set products = column.products.products|slice(0, column.items_count != 'default' ? column.items_count : column.products.products|length) %}
                {% set perSlide = settings.count_products_to_show_per_slide is defined and settings.count_products_to_show_per_slide != '' ? settings.count_products_to_show_per_slide + 0 : 4 %}
                {% set counter = 0 %}

                {% for key, product in products %}

                  {% if loop.index0 % perSlide == 0 %}
                    <div class="item">
                  {% endif %}

                    <div class="list__item">
                      {% if product.images[0]['image']['medium'] %}
                        <a href="/products/{{ product.slug }}" class="list__cover">
                          <img  loading="lazy"
                            style="{% if product.is_infinite == false and product.quantity <= 0 %}opacity: 0.5;{% endif %}"
                            src="{{ imageUrl(product.images[0]['image']['medium'], { w: 'auto', q: 'auto', f: 'auto' }) }}"
                            alt="{{ product.name }}">
                          {% if product.discount_percentage and (product.is_infinite or product.quantity > 0) %}
                            <b class="product-discount" style="{% if column.main_color %}background-color:{{ column.main_color }};{% endif %}">
                              -{{ product.discount_percentage }}%
                            </b>
                          {% endif %}
                        </a>
                      {% endif %}

                      <div class="list__wrap">
                        {% if product.name %}
                          <h3 class="list__title">
                            <a href="/products/{{ product.slug }}" data-color="{% if column.main_color %}{{ column.main_color }}{% else %}var(--primary-color){% endif %}">{{ product.name }}</a>
                          </h3>
                        {% endif %}

                        {% if product.formatted_sale_price is not null %}
                          <div class="list__price">
                            <span class="salePrice" style="{% if column.main_color %}color:{{ column.main_color }};{% endif %}">{{ product.formatted_sale_price }}</span>
                            {% if product.formatted_price %}
                              <s class="oldPrice">{{ product.formatted_price }}</s>
                            {% endif %}
                          </div>
                        {% else %}
                          <div class="list__price">
                            <span class="salePrice" style="{% if column.main_color %}color:{{ column.main_color }};{% endif %}">{{ product.formatted_price }}</span>
                          </div>
                        {% endif %}
                      </div>

                      {% if product.is_infinite == true or product.quantity >= 0 %}
                        <div class="list__buy {% if column.radius %}radius{% endif %} {% if product.is_infinite == false and product.quantity <= 0 %} disabled {% endif %}"
                            style="{% if product.is_infinite == false and product.quantity <= 0 %}pointer-events: none;{% endif %}">
                          {% if product.has_options or product.has_fields %}
                            <a class="btn-product-card hbtn1" href="/products/{{ product.slug }}" style="background-color:{% if column.main_color %}{{ column.main_color }}{% else %}var(--primary-color){% endif %};">
                              <span class="add-to-cart-progress d-none"
                                    style="position:absolute;left:0;width:100%;height:100%;background-color:{% if column.main_color %}{{ column.main_color }}{% else %}var(--primary-color){% endif %};color:#fff;z-index:1;">
                                <i class="fa fa-refresh fa-spin"></i>
                              </span>
                              <svg xmlns='http://www.w3.org/2000/svg' width='512' height='512' viewBox='0 0 512 512'>
                                <line x1='256' y1='112' x2='256' y2='400' style='fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/>
                                <line x1='400' y1='256' x2='112' y2='256' style='fill:none;stroke-linecap:round;stroke-linejoin:round;stroke-width:32px'/>
                              </svg>
                            </a>
