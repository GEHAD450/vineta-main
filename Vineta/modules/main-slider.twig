<script>
    document.addEventListener("DOMContentLoaded", function(){



          var carousel = $("section[section-id={{ sectionId }}] .vs-carousel.hero-layout2");

          // وظيفة للحصول على قيمة من data-* attributes للعنصر
          function getData(attribute) {
              return carousel.data(attribute);
          }

        var arrowNextClass = (window.appDirection === 'ltr') ? 'fa fa-angle-right': 'fa fa-angle-left';
        var arrowPrevClass = (window.appDirection === 'ltr') ? 'fa fa-angle-left' : 'fa fa-angle-right';
          // أزرار التنقل (السابق - التالي)
          var prevArrowHTML = '<button type="button" class="slick-prev vs-btn hbtn1"><i class="' + arrowPrevClass + '"></i></button>';
          var nextArrowHTML = '<button type="button" class="slick-next vs-btn hbtn1"><i class="' + arrowNextClass + '"></i></button>';

          // إعدادات السلايدر
          carousel.slick({
              dots: {% if settings.show_dots %}true{% else %}false{% endif %},
              fade: !!getData("fade"),
              arrows: {% if settings.show_arrows %}true{% else %}false{% endif %},
              speed: getData("speed") ? getData("speed") : 1000,
              asNavFor: !!getData("asnavfor") && getData("asnavfor"),
              autoplay: {% if settings.autoplay %}true{% else %}false{% endif %},
              infinite: {% if settings.loop %}true{% else %}false{% endif %},
              slidesToShow: getData("slide-show") ? getData("slide-show") : 1,
              adaptiveHeight: !!getData("adaptive-height"),
              centerMode: !!getData("center-mode"),
              autoplaySpeed: getData("autoplay-speed") ? getData("autoplay-speed") : 8000,
              centerPadding: getData("center-padding") ? getData("center-padding") : "0",
              focusOnSelect: getData("focuson-select") != 0,
              pauseOnFocus: !!getData("pauseon-focus"),
              pauseOnHover: !!getData("pauseon-hover"),
              variableWidth: !!getData("variable-width"),
              vertical: !!getData("vertical"),
              verticalSwiping: !!getData("vertical"),
              prevArrow: prevArrowHTML,
              nextArrow: nextArrowHTML,
              rtl: window.appDirection === 'rtl'
          });

      });

</script>
