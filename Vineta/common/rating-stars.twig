{% if rating %}
        {% set ratingRounded = ((rating * 2 )|round(0, 'ceil')) / 2 %}
        <div class="product-card-rating" data-rating="{{ rating }}">
        {% for n in rangeN(1, 5) %}
            {% if (n <= ratingRounded) %}
                <span class="fa fa-star"></span>
            {% elseif (n <= ratingRounded + 0.5) %}
                <span class="fa fa-ofstar-half-empty"></span>
            {% else %}
                <span class="fa fa-star deactive"></span>
            {% endif %}
        {% endfor %}
        </div>
{% endif %}
