document.addEventListener("DOMContentLoaded", function(){
    // WhatsApp Chat Functionality (Legacy)
    $(".whatsChat .whatsTitle").click(function () {
        $(this).siblings().toggleClass("active");
        $(".whatsChat .content .bodyMsgs").removeClass("active");
        $(".whatsChat .content .bodyMsgs").addClass("active");
    });
    
    $(".whatsChat .content .head").click(function () {
        $(".whatsChat .angleDown").removeClass("active");
        $(".whatsChat .content .bodyMsgs .messageStyle").removeClass("active");
    });

    $('body,html').on('click', function(e) {
        var container = $(".whatsChat .angleDown *,.whatsChat .whatsTitle,.whatsChat .whatsTitle *"),
        Sub = $(".whatsChat .angleDown,.whatsChat .content .bodyMsgs .messageStyle");
        if(!$(e.target).is(container)){
            Sub.removeClass("active");
        }
    });

    // Modern Footer Enhancements
    
    // Back to Top Button
    const backToTopBtn = document.querySelector('.back-to-top');
    if (backToTopBtn) {
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) {
                backToTopBtn.classList.add('show');
            } else {
                backToTopBtn.classList.remove('show');
            }
        });
    }

    // Smooth Scroll for Footer Links
    document.querySelectorAll('.footer-link[href^="#"]').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        });
    });

    // Newsletter Form Enhancement
    const newsletterForm = document.querySelector('.newsletter-form');
    if (newsletterForm) {
        newsletterForm.addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('.btn-submit');
            const input = this.querySelector('input[type="email"]');
            
            if (submitBtn && input) {
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i>';
                submitBtn.disabled = true;
                
                // Reset after 3 seconds (adjust based on your form handling)
                setTimeout(() => {
                    submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i>';
                    submitBtn.disabled = false;
                    input.value = '';
                }, 3000);
            }
        });
    }

    // Animate Footer Columns on Scroll
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver(function(entries) {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.animationPlayState = 'running';
            }
        });
    }, observerOptions);

    document.querySelectorAll('.footer-column').forEach(column => {
        observer.observe(column);
    });

    // Social Media Tooltips
    document.querySelectorAll('.social-item[data-tooltip]').forEach(item => {
        item.addEventListener('mouseenter', function() {
            const tooltip = document.createElement('div');
            tooltip.className = 'social-tooltip';
            tooltip.textContent = this.getAttribute('data-tooltip');
            tooltip.style.cssText = `
                position: absolute;
                bottom: 60px;
                left: 50%;
                transform: translateX(-50%);
                background: rgba(0, 0, 0, 0.8);
                color: white;
                padding: 5px 10px;
                border-radius: 4px;
                font-size: 12px;
                white-space: nowrap;
                z-index: 1000;
                opacity: 0;
                transition: opacity 0.3s ease;
            `;
            this.appendChild(tooltip);
            setTimeout(() => tooltip.style.opacity = '1', 10);
        });

        item.addEventListener('mouseleave', function() {
            const tooltip = this.querySelector('.social-tooltip');
            if (tooltip) {
                tooltip.style.opacity = '0';
                setTimeout(() => tooltip.remove(), 300);
            }
        });
    });

    // Contact Item Click to Copy
    document.querySelectorAll('.contact-item').forEach(item => {
        const link = item.querySelector('.contact-link');
        if (link && (link.href.startsWith('tel:') || link.href.startsWith('mailto:'))) {
            item.style.cursor = 'pointer';
            item.addEventListener('click', function() {
                const text = link.textContent.trim();
                if (navigator.clipboard) {
                    navigator.clipboard.writeText(text).then(() => {
                        showCopyNotification(this, 'تم النسخ!');
                    });
                }
            });
        }
    });

    function showCopyNotification(element, message) {
        const notification = document.createElement('div');
        notification.textContent = message;
        notification.style.cssText = `
            position: absolute;
            top: -30px;
            left: 50%;
            transform: translateX(-50%);
            background: var(--footer-accent);
            color: white;
            padding: 5px 10px;
            border-radius: 4px;
            font-size: 12px;
            z-index: 1000;
            opacity: 0;
            transition: all 0.3s ease;
        `;
        element.style.position = 'relative';
        element.appendChild(notification);
        
        setTimeout(() => notification.style.opacity = '1', 10);
        setTimeout(() => {
            notification.style.opacity = '0';
            setTimeout(() => notification.remove(), 300);
        }, 2000);
    }

    // Footer Mobile Collapse (Legacy Support)
    $('.footer-heading-mobile').on('click', function() {
        var $this = $(this);
        var $content = $this.next('.tf-collapse-content');
        
        $this.toggleClass('active');
        $content.toggleClass('active');
    });

    // Lazy Load Footer Images
    const footerImages = document.querySelectorAll('.modern-footer img[loading="lazy"]');
    if ('IntersectionObserver' in window) {
        const imageObserver = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const img = entry.target;
                    img.src = img.dataset.src || img.src;
                    img.classList.remove('lazy');
                    observer.unobserve(img);
                }
            });
        });

        footerImages.forEach(img => imageObserver.observe(img));
    }

    // Footer Performance Optimization
    const footerElement = document.querySelector('.modern-footer');
    if (footerElement) {
        // Reduce animations on low-end devices
        if (navigator.hardwareConcurrency && navigator.hardwareConcurrency < 4) {
            footerElement.classList.add('reduced-motion');
        }

        // Pause animations when footer is not visible
        const footerObserver = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                const animations = entry.target.querySelectorAll('.floating-shape');
                if (entry.isIntersecting) {
                    animations.forEach(el => el.style.animationPlayState = 'running');
                } else {
                    animations.forEach(el => el.style.animationPlayState = 'paused');
                }
            });
        });

        footerObserver.observe(footerElement);
    }

    // Check if Font Awesome icons are loaded and show SVG fallbacks if needed
    setTimeout(() => {
        const twitterIcon = document.querySelector('.social-twitter .fa-x-twitter');
        const twitterSvg = document.querySelector('.social-twitter .twitter-fallback');
        
        if (twitterIcon && twitterSvg) {
            const iconStyle = window.getComputedStyle(twitterIcon, '::before');
            const hasContent = iconStyle.content && iconStyle.content !== 'none' && iconStyle.content !== '""';
            
            if (!hasContent) {
                twitterIcon.style.display = 'none';
                twitterSvg.style.display = 'inline-block';
            }
        }
    }, 1000);
});
